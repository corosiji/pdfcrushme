name: Build Windows EXE

on:
  workflow_dispatch:
  push:
    branches: ["main"]
  pull_request:
    branches: ["main"]

jobs:
  build-win:
    runs-on: windows-latest

    env:
      ELECTRON_BUILDER_DISABLE_SYMLINKS: "true"
      CI: "true"

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 20
          cache: npm

      - name: Install dependencies
        run: npm ci

      - name: Build Windows installer
        run: npm run dist:win
        env:
          ELECTRON_BUILDER_DISABLE_SYMLINKS: "true"

      - name: Upload build artifacts
        uses: actions/upload-artifact@v4
        with:
          name: pdf-compressor-win
          path: |
            dist/*.exe
            dist/*.msi
            dist/*.zip
            dist/*.blockmap
            dist/latest*.yml
